{
  "name": "python-whatsapp-bot-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "app/frontend"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "npm run dev -w app/frontend",
    "build": "npm run build -w app/frontend",
    "start": "npm run start -w app/frontend",
    "lint": "npm run lint -w app/frontend",
    "lint:fix": "npm run lint:fix -w app/frontend",
    "format": "npm run format -w app/frontend",
    "typecheck": "npm run typecheck -w app/frontend",
    "knip": "npm run knip -w app/frontend",
    "check": "npm run check -w app/frontend",
    "check:python": "uv run ruff check . && uv run ruff format --check .",
    "fix:python": "uv run ruff check --fix --unsafe-fixes . && uv run ruff format .",
    "test": "npm run test -w app/frontend",
    "test:watch": "npm run test:watch -w app/frontend"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "husky": "^9.1.7",
    "typescript": "^5",
    "ultracite": "6.2.1"
  },
  "dependencies": {
    "@tiptap/extension-placeholder": "^3.10.7",
    "@tiptap/react": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "slate": "^0.118.1",
    "slate-history": "^0.113.1",
    "slate-react": "^0.119.0"
  }
}
